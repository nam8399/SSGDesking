<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Fragment.ReserveConfirmFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:background="@drawable/title_bar">
        <ImageView
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_weight="0.03"
            android:layout_marginLeft="15dp"
            android:padding="3dp">
        </ImageView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="불편사항 신고"
            android:textStyle="bold"
            android:textSize="21sp"
            android:layout_weight="0.6"
            android:padding="10dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="center_vertical">
        </TextView>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="0.03"
            android:padding="3dp">
        </ImageView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/icon_report"
            android:layout_gravity="center_vertical">
        </ImageView>
    </LinearLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="false"
        app:lottie_rawRes="@raw/anim_success" />
    <LinearLayout
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="[접수완료]"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#D80C18"
                android:gravity="center">
            </TextView>
            <TextView
                android:id="@+id/reserve_report_seatid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="15F D-29"
                android:textStyle="bold"
                android:textSize="30sp"
                android:textColor="#D80C18"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:gravity="center">
            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="좌석에 대한 신고가"
                android:textSize="18sp"
                android:textColor="#D80C18"
                android:layout_marginTop="10dp"
                android:gravity="center">
            </TextView>
            <TextView
                android:id="@+id/reserve_report_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="신고번호 [12345]로 접수되었습니다."
                android:textSize="18sp"
                android:textColor="#D80C18"
                android:layout_marginTop="10dp"
                android:gravity="center">
            </TextView>

        </LinearLayout>
    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp">
        <TextView
            android:id="@+id/reserve_ereport_cancel"
            android:layout_width="120dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="메인으로"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:gravity="center"
            android:background="@drawable/reserve_confirm_cancel">
        </TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>