<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Fragment.ReserveConfirmFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="좌석 신고"
        android:background="@drawable/title_bar"
        android:textStyle="bold"
        android:textSize="23sp"
        android:padding="10dp"
        android:textColor="@color/white"
        android:gravity="center">
    </TextView>
    <LinearLayout
        android:layout_width="290dp"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:background="@drawable/reserve_notice"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/icon_reserve_notice"
            android:layout_gravity="center_vertical">
        </ImageView>
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:text="좌석 또는 회의실을 선택하세요.">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="층"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp">
            </TextView>
            <Spinner
                android:id="@+id/reserve_report_floor"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:background="@drawable/reserve_ereport_subject"
                android:textColor="@color/black">
            </Spinner>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="좌석번호"
                android:layout_marginLeft="10dp">
            </TextView>
            <EditText
                android:id="@+id/reserve_report_seatid"
                android:layout_width="110dp"
                android:layout_height="35dp"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="10dp"
                android:paddingLeft="7dp"
                android:padding="5dp"
                android:gravity="center"
                android:background="@drawable/reserve_ereport_subject"
                android:textColor="@color/black">
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="신고사유"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp">
            </TextView>
            <Spinner
                android:id="@+id/reserve_report_reason"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:background="@drawable/reserve_ereport_subject"
                android:textColor="@color/black">
            </Spinner>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="신고 상세"
                android:layout_marginLeft="10dp">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:layout_gravity="center_horizontal">
            <EditText
                android:id="@+id/reserve_ereport_edittext"
                android:layout_width="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:gravity="top"
                android:layout_height="160dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/reserve_report">
            </EditText>
        </LinearLayout>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">
        <TextView
            android:id="@+id/reserve_ereport_cancel"
            android:layout_width="120dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/reserve_ereport_report"
            android:text="메인으로"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:gravity="center"
            android:background="@drawable/reserve_confirm_cancel">
        </TextView>
        <TextView
            android:id="@+id/reserve_ereport_report"
            android:layout_width="120dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/reserve_ereport_cancel"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="신고접수"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:gravity="center"
            android:background="@drawable/reserve_confirm_ok">
        </TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>