<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Fragment.ReserveConfirmFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:background="@drawable/title_bar">
        <ImageView
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_weight="0.03"
            android:layout_marginLeft="15dp"
            android:padding="3dp">
        </ImageView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="좌석예약하기"
            android:textStyle="bold"
            android:textSize="21sp"
            android:layout_weight="0.6"
            android:padding="10dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="center_vertical">
        </TextView>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="0.03"
            android:padding="3dp">
        </ImageView>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="290dp"
        android:layout_height="250dp"
        android:layout_marginTop="70dp"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/icon_seat"
            android:layout_gravity="center">
        </ImageView>
        <TextView
            android:id="@+id/reserve_success_seatnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="D-29"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:textColor="#D80C18"
            android:textSize="30sp"
            android:textStyle="bold">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="좌석 예약 완료"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold">
        </TextView>
    </LinearLayout>
    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="false"
        app:lottie_rawRes="@raw/anim_success" />

    <LinearLayout
        android:layout_width="290dp"
        android:layout_height="55dp"
        android:layout_marginTop="140dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center_horizontal">
        <TextView
            android:id="@+id/reserve_success_endtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="#D80C18"
            android:textStyle="bold"
            android:gravity="center"
            android:text="18:29">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:text="까지 예약이 유지됩니다.">
        </TextView>
    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">
        <TextView
            android:id="@+id/reserve_confirm_gotomain"
            android:layout_width="160dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="메인으로"
            android:textColor="@color/white"
            android:textSize="23sp"
            android:gravity="center"
            android:background="@drawable/reserve_confirm_gotomain">
        </TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>