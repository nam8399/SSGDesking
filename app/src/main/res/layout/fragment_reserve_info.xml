<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Fragment.ReserveInfoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:background="@drawable/title_bar">
        <ImageView
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_weight="0.03"
            android:layout_marginLeft="15dp"
            android:padding="3dp">
        </ImageView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="좌석배정현황"
            android:textStyle="bold"
            android:textSize="21sp"
            android:layout_weight="0.6"
            android:padding="10dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="center_vertical">
        </TextView>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="0.03"
            android:padding="3dp">
        </ImageView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="290dp"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:background="@drawable/reserve_notice"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/icon_reserve_notice"
            android:layout_gravity="center_vertical">
        </ImageView>
        <TextView
            android:id="@+id/reserve_info_notice"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:text="배정정보가 없습니다.">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="290dp"
        android:layout_height="250dp"
        android:layout_marginTop="130dp"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="좌석정보"
                android:layout_marginLeft="10dp">
            </TextView>
            <TextView
                android:id="@+id/reserve_info_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:textColor="@color/black">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="이용상태"
                android:layout_marginLeft="10dp">
            </TextView>
            <TextView
                android:id="@+id/reserve_info_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:textColor="@color/black">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="사용시작시간"
                android:layout_marginLeft="10dp">
            </TextView>
            <TextView
                android:id="@+id/reserve_info_starttime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:textColor="@color/black">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="사용종료시간"
                android:layout_marginLeft="10dp">
            </TextView>
            <TextView
                android:id="@+id/reserve_info_endtime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:textColor="@color/black">
            </TextView>
        </LinearLayout>
    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/reserve_info_reserve_after_layout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp">
        <TextView
            android:id="@+id/reserve_info_return"
            android:layout_width="100dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/reserve_info_cancel"
            android:text="반납"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:gravity="center"
            android:background="@drawable/reserve_confirm_ok">
        </TextView>
        <TextView
            android:id="@+id/reserve_info_cancel"
            android:layout_width="100dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/reserve_info_return"
            app:layout_constraintEnd_toStartOf="@+id/reserve_info_report"
            android:text="취소"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:gravity="center"
            android:background="@drawable/reserve_confirm_cancel">
        </TextView>
        <TextView
            android:id="@+id/reserve_info_report"
            android:layout_width="100dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/reserve_info_cancel"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="후기작성"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:gravity="center"
            android:background="@drawable/reserve_confirm_report">
        </TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/reserve_info_reserve_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp">
        <TextView
            android:id="@+id/reserve_info_reserve"
            android:layout_width="100dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="좌석배정"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:gravity="center"
            android:background="@drawable/reserve_confirm_ok">
        </TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>