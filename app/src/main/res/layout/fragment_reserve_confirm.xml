<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Fragment.ReserveConfirmFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="좌석예약하기"
        android:background="@drawable/title_bar"
        android:textStyle="bold"
        android:textSize="23sp"
        android:padding="10dp"
        android:textColor="@color/white"
        android:gravity="center">
    </TextView>
    <LinearLayout
        android:layout_width="290dp"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:background="@drawable/reserve_notice"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/icon_reserve_notice"
            android:layout_gravity="center_vertical">
        </ImageView>
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:text="예약정보를 확인하세요.">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="290dp"
        android:layout_height="250dp"
        android:layout_marginTop="70dp"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="좌석정보"
                android:layout_marginLeft="10dp">
            </TextView>
            <TextView
                android:id="@+id/reserve_confirm_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="15F / D-29번"
                android:layout_marginLeft="30dp"
                android:textColor="@color/black">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="이용상태"
                android:layout_marginLeft="10dp">
            </TextView>
            <TextView
                android:id="@+id/reserve_confirm_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="임시배정"
                android:layout_marginLeft="30dp"
                android:textColor="@color/black">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="사용시작시간"
                android:layout_marginLeft="10dp">
            </TextView>
            <TextView
                android:id="@+id/reserve_confirm_starttime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2023-01-10 14:29:00"
                android:layout_marginLeft="30dp"
                android:textColor="@color/black">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="사용종료시간"
                android:layout_marginLeft="10dp">
            </TextView>
            <TextView
                android:id="@+id/reserve_confirm_endtime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2023-01-10 18:29:00"
                android:layout_marginLeft="30dp"
                android:textColor="@color/black">
            </TextView>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="290dp"
        android:layout_height="55dp"
        android:layout_marginTop="70dp"
        android:layout_gravity="center_horizontal"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="center"
        android:text="해당 좌석으로 예약하시겠습니까?">
    </TextView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">
        <TextView
            android:id="@+id/reserve_confirm_cancel"
            android:layout_width="140dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/reserve_confirm_ok"
            android:text="취소"
            android:textColor="@color/white"
            android:textSize="23sp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/reserve_confirm_cancel">
        </TextView>
        <TextView
            android:id="@+id/reserve_confirm_ok"
            android:layout_width="140dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/reserve_confirm_cancel"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="확인"
            android:textColor="@color/white"
            android:textSize="23sp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/reserve_confirm_ok">
        </TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>