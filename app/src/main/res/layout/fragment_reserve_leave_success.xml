<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Fragment.ReserveLeaveSuccessFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="좌석예약하기"
        android:background="@drawable/title_bar"
        android:textStyle="bold"
        android:textSize="23sp"
        android:padding="10dp"
        android:textColor="@color/white"
        android:gravity="center">
    </TextView>
    
    <LinearLayout
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/icon_seat"
            android:layout_gravity="center">
        </ImageView>
        <TextView
            android:id="@+id/reserve_success_seatnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="D-29"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:textColor="#D80C18"
            android:textSize="30sp"
            android:textStyle="bold">
        </TextView>
        <TextView
            android:id="@+id/reserve_leave_return_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="좌석 반납 완료"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold">
        </TextView>
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/anim_succeess"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="false"
            app:lottie_rawRes="@raw/anim_success" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="10dp"
            android:textSize="14sp"
            android:textColor="#716F77"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:text="* 이용하신 좌석의 후기를 등록해주세요.">
        </TextView>
        <EditText
            android:id="@+id/reserve_leave_edittext"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@drawable/reserve_report">
        </EditText>
    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">
        <TextView
            android:id="@+id/reserve_leave_gotomain"
            android:layout_width="130dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/reserve_leave_writereport"
            android:text="메인으로"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:gravity="center"
            android:background="@drawable/reserve_leave_gotomain">
        </TextView>
        <TextView
            android:id="@+id/reserve_leave_writereport"
            android:layout_width="130dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/reserve_leave_gotomain"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="후기등록"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:gravity="center"
            android:background="@drawable/reserve_leave_writereport">
        </TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>